{
  "name": "@bridge/core",
  "version": "0.1.0",
  "description": "Type-safe API client generator from OpenAPI and GraphQL specifications",
  "type": "module",
  "license": "MIT",
  "author": "Bridge Contributors",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bridge-codes/bridge.git"
  },
  "homepage": "https://github.com/bridge-codes/bridge#readme",
  "bugs": {
    "url": "https://github.com/bridge-codes/bridge/issues"
  },
  "keywords": [
    "openapi",
    "graphql",
    "typescript",
    "codegen",
    "api-client",
    "zod",
    "react-query",
    "swr",
    "code-generator",
    "type-safe",
    "http-client",
    "schema",
    "validation"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "import": "./dist/cli/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "bridge": "./dist/cli/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "bench": "vitest bench",
    "bench:run": "vitest bench --run",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "docs": "vitepress build docs",
    "docs:dev": "vitepress dev docs",
    "docs:preview": "vitepress preview docs",
    "docs:api": "typedoc",
    "prepare": "husky",
    "prepublishOnly": "npm run build",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm run build && changeset publish"
  },
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "^8.0.0",
    "@graphql-tools/load": "^8.0.0",
    "chokidar": "^4.0.0",
    "commander": "^12.0.0",
    "graphql": "^16.8.0",
    "yaml": "^2.3.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.0",
    "lint-staged": "^16.2.7",
    "openapi-types": "^12.1.0",
    "prettier": "^3.2.0",
    "tsup": "^8.0.0",
    "typedoc": "^0.28.16",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.0.0",
    "vitepress": "^1.5.0",
    "vitest": "^1.0.0",
    "zod": "^3.22.0"
  },
  "peerDependencies": {
    "@tanstack/react-query": ">=5.0.0",
    "swr": ">=2.0.0",
    "zod": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "@tanstack/react-query": {
      "optional": true
    },
    "swr": {
      "optional": true
    },
    "zod": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
